// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Jekyll: Build",
      "type": "shell",
      "command": "bundle exec jekyll build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-l", "-i", "-c"]  // ‚Üê here
        }
      }
    }
  ]
}
